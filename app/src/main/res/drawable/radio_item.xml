<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/primary"/> <!-- Change stroke color when checked -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="@color/grey"/> <!-- Default stroke color when not checked -->
        </shape>
    </item>
</selector>
