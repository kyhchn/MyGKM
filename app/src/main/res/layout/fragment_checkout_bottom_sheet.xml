<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"

    android:layout_height="match_parent"
    android:background="@drawable/bottomsheet_layout"
    android:orientation="vertical"
    tools:context=".ui.home.CheckoutBottomSheet">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        android:layout_height="250dp">
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nasi Pecel"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_semibold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/productDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Nasi + Sayur Pecel + Bumbu Kacang + Tempe + Tahu"
        android:fontFamily="@font/montserrat_light"/>
    
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rp 8.000"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/montserrat_semibold"/>
        <View
            android:layout_width="1dp"
            android:layout_height="58dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:contentDescription="decrease"
                android:layout_width="48dp"
                android:id="@+id/decreaseButton"
                android:layout_height="48dp"
                android:src="@drawable/ic_min"
                android:background="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/quantity"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_light"/>
            <ImageButton
                android:contentDescription="increase"
                android:layout_width="48dp"
                android:id="@+id/increaseButton"
                android:layout_height="48dp"
                android:src="@drawable/ic_plus"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/orderButton"
        android:text="Order"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_semibold"
        android:background="@drawable/primary_button"
        android:layout_height="wrap_content"/>
</LinearLayout>